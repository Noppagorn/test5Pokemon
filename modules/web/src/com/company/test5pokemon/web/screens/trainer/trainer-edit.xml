<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.test5pokemon.web.screens.trainer">
    <data>
        <instance id="trainerDc"
                  class="com.company.test5pokemon.entity.Trainer"
                  view="_local">
            <loader id="trainerDl"/>
        </instance>
        <collection id="pokemonsDc" class="com.company.test5pokemon.entity.Pokemon"
                    view="pokemon-with-type-and-trainer">
            <loader id="pokemonsDl">
                <query><![CDATA[select e from test5pokemon_Pokemon e
where e.trainer = :trainer]]></query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="trainerDc">
            <column width="250px">
                <textField id="nameField" property="name"/>
                <textField id="moneyField" property="money"/>
                <table dataContainer="pokemonsDc">
                    <columns>
                        <column id="name"/>
                        <column id="type"/>
                    </columns>
                </table>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
